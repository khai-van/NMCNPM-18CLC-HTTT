<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<!-- bootstrap-->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
		integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
	<!-- bootstrap-->
</head>

<body style="background-color: #f0ecec;">
	<!-- bootstrap-->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous">
	</script>
	<!-- bootstrap-->

	<div class="body row">
		<div class="col vertical-nav" id="sidebar">
			<div class="pt-3 pd-1 px-3">
				<a href="/admin" target="_blank" rel="noopener noreferrer">
					<div class="media d-flex align-items-center"><img src="/images/logo.png" alt="..." width="70"
							class="rounded mx-auto d-block">
					</div>
				</a>
			</div>
			<hr style="border: 1px solid #f1f5f9; width:90%">

			<ul class="nav nav-pills flex-column pt-3 mb-auto">
				<li class="nav-item"><a href="/admin/products" class="nav-link text-white"><svg class="bi me-2"
							width="16" height="16"></svg>Danh mục sản phẩm</a></li>
				<li><a href="/admin/addProduct" class="nav-link text-white"><svg class="bi me-2" width="16"
							height="16"></svg>Thêm sản phẩm</a></li>
				<li><a href="#" class="nav-link text-white"><svg class="bi me-2" width="16" height="16"></svg>Quản lý
						đơn hàng</a></li>
			</ul>
			<hr style="border: 1px solid #f1f5f9; width:90%">
			<div class="footer"><a class="nav-link text-white" href="/admin/logout"><strong>Đăng xuất</strong></a></div>

		</div>
		<!-- End vertical navbar -->
	</div>
	<div class="col container-fluid page-content py-3 px-3" id="content">
		<button id="sidebarCollapse" type="button"
			class="btn btn-primary rounded-pill shadow-sm px-4 mb-4">Menu</button>
		<!--Body-->
		<div class="container p-3 bg-light" style="min-height: 85vh;">
			{{{body}}}
		</div>
		<!--Body-->




		<style>
			.vertical-nav {
				min-width: 18rem;
				width: 18rem;
				height: 100vh;
				position: fixed;
				box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
				background-color: #212529; 
				padding-left: 25px;
			}

			.page-content {
				width: calc(100% - 17rem);
				margin-left: 17rem;
				height: 100vh;
				background-color: #f1f8f9;
			}

			#sidebar.active {
				margin-left: -17rem; !important
			}

			#content.active {
				width: 100%;
				margin: 0;
			}

			@media (max-width: 768px) {
				#sidebar {
					margin-left: -17rem; !important
				}

				#sidebar.active {
					margin-left: 0;
				}

				#content {
					width: 100%;
					margin: 0;
				}

				#content.active {
					margin-left: 17rem;
					width: calc(100% - 17rem);
				}
			}
		</style>

		<script>
			$(document).ready(function () {
				$(".vertical-nav").css({
					"transition": "all 0.4s"
				});
				$(".page-content").css({
					"transition": "all 0.4s"
				});

				document.getElementsByClassName("nav-link")[{{mode}}].classList.add("active");
				$('#sidebarCollapse').on('click', function () {
					$('#sidebar, #content').toggleClass('active');
				});
			});
		</script>
</body>

</html>