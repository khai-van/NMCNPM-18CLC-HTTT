	<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators button123">
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
				aria-label="Slide 1" aria-current="true"></button>
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"
				class=""></button>
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"
				class=""></button>
		</div>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="/images/img/slider_1.jpg" class="d-block w-100" alt="...">
			</div>
			<div class="carousel-item">
				<img src="/images/img/slider_2.jpg" class="d-block w-100" alt="...">
			</div>
			<div class="carousel-item">
				<img src="/images/img/slider_3.jpg" class="d-block w-100" alt="...">
