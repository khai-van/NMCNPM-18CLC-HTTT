<div id="content" class="container position-relative">
  <nav style="
          --bs-breadcrumb-divider: url(
            &#34;data:image/svg + xml,
            %3Csvgxmlns='http://www.w3.org/2000/svg'width='11'height='11'%3E%3Cpathd='M2.5 0L1 1.5 3.5 4 1 6.5 2.5 8l4-4-4-4z'fill='currentColor'/%3E%3C/svg%3E&#34;
          );
        " aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="">HOME</a></li>
      <li class="breadcrumb-item active page_hientai" aria-current="page">
        Sản phẩm mới
      </li>
    </ol>
  </nav>



  <div class="row">
    <div class="col-sm-6">
      <div class="row">
        <div class="form-check col">
        <a href="?_sort_AZ">
          A -> Z
          <i class="ti-upload"></i>
        </a>
      </div>

      <div class="form-check col">
        <a href="?_sort_ZA">
          Z -> A
          <i class="ti-download"></i>
        </a>
      </div>
      </div>
      
    </div>



    <div class="col-sm-6">
      <div class="row">
        <div class="form-check col">
        <a href="?_sort_tang">
          Giá tăng
          <i class="ti-upload"></i>
        </a>
      </div>

      <div class="form-check col">
        <a href="?_sort_giam">
          Giá giảm
          <i class="ti-download"></i>
        </a>
      </div>
      </div>
      
    </div>

  </div>


  <div class="list-product container">
    <div class="row pt-2 mx-n2">
      <!-- Product -->
      {{#each listProducts}}
      <div class="col-lg-3 col-md-4 col-sm-6 px-2 mb-4">
        <div class="card product-card">
          <div class="product-card-actions d-flex align-items-center">
          </div><a class="card-img-top d-block overflow-hidden" href="/product?id={{this.id}}"><img
              src="{{this.files.[0]}}" alt="Product"></a>
          <div class="card-body py-2 ">
            <h3 class="product-title fs-sm text-truncate"><a href="/product?id={{this.id}}">{{this.name}}</a></h3>
            <div class="d-flex justify-content-between">
              <div class="product-price"><span class="text-accent">{{this.price}}</span></div>
            </div>
          </div>
          <div class="card-body card-body-hidden">
            <button class="btn btn-primary btn-sm d-block w-100 mb-2" type="button"
              onclick="addToCart('{{this.id}}', 1)"><i class="ci-cart fs-sm me-1"></i>Thêm vào giỏ
              hàng</button>
          </div>
        </div>
        <hr class="d-sm-none">
      </div>
      {{/each}}
    </div>
  </div>
</div>

<style>
  @media (max-width:768px) {
    .sort_product {
      max-width: 150px !important;
    }
  }




  #content {
    margin-top: 20px;
    margin-bottom: 50px;

  }

  .red_color {
    color: red;

  }


  input {
    border: 1px solid #ccc;
    font-weight: bold;
    height: 33px;
    text-align: center;
    width: 30px;
  }

  .button_cart {
    /* background: #FE980F; */

    color: #FFFFFF;
    font-size: 15px;
    margin-top: 10px;
  }

  .icon {}

  .carousel-indicators {
    position: unset !important;
  }

  #content a {
    text-decoration: none;
    color: black;
    font-size: 20px;
  }

  #content .page_hientai {
    color: red;
    font-size: 20px;
  }



  #content .sort_product {
    max-width: 200px;
  }
</style>
<script>
  function addToCart(id, amount) {
    $.ajax({
      url: "/cart",
      type: "GET",
      data: {
        id: id,
        amount: amount
      },
      dataType: "json",

      success: async function (data) {
        if (data.state != "fail") {
          $(".p1").attr("data-count", data.state);
        }
      }
    });
  }
</script>