{{#if listCart}}
<dir class="container body">
    <div class="card">
        <div class="row">
            <div class="col-md-8 cart">
                <div class="title">
                    <div class="row">
                        <div class="col">
                            <h4><b>Shopping Cart</b></h4>
                        </div>
                        <div class="col align-self-center text-end text-muted">{{listCart.length}} items</div>
                    </div>
                </div>
                {{#each listCart}}
                <div class="row border-top border-bottom">
                    <div class="row main align-items-center">
                        <div class="col-2"><img class="img-fluid img" src="{{this.files.[0]}}"></div>
                        <div class="col">
                            <div class="row text-muted">{{this.type}}</div>
                            <div class="row">{{this.name}}</div>
                        </div>
                        <div class="col align-items-center amount"> {{this.number}} </div>
                        <div class="col"><span class="price">{{this.price}}</span><a class="a"
                                style="float:right; text-decoration: none;" onclick="popCart('{{this.id}}')">X</a></div>
                    </div>
                </div>
                {{/each}}
                <div class="back-to-shop text-muted"><a href="/" style="text-decoration: none;">&leftarrow; Quay lại</a>
                </div>
            </div>
            <div class="col-md-4 summary">
                <div>
                    <h5 style="margin-top: 4vh"><b>Summary</b></h5>
                </div>


                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                    <div class="col">Tổng cộng</div>
                    <div class="col text-right" id="total">100.000Vnd</div>
                </div> <a class="btn" href="/purchase">Thanh toán</a>
            </div>
        </div>
    </div>
</dir>
{{else}}
<div class="container body" style="display: block; padding-top: 20px;">
    <div>
        <div class="card">
            <div class="card-header">
                <h5>Giỏ hàng</h5>
            </div>
            <div class="card-body cart">
                <div class="col-sm-12 empty-cart-cls text-center"> <img src="https://i.imgur.com/dCdflKN.png"
                        width="130" height="130" class="img-fluid mb-4 mr-3">
                    <h3><strong>Không có gì trong giỏ hàng</strong></h3>
                    <a href="/" class="btn btn-primary cart-btn-transform my-3" data-abc="true">Tiếp tục mua sắm</a>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{err}}

{{#if err}}
<div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Sản phẩm {{err}} không còn đủ số lượng hoặc không khả dụng.
                <br>
                Xin vui lòng xóa sản phẩm để tiếp tục thanh toán.
                <br>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Modal').modal('show');
    });
</script>
{{/if}}

